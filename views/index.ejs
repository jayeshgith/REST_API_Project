

 <html>

<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>All Posts</title>
  <link rel="stylesheet" href="/style.css" />
</head>
<body>
    


<div class="container">
  <h1>REST A_P_I POST</h1>
  <a href="/posts/new" class="btn btn-new">+ Create New Post</a>

  <% posts.forEach(post => { %>
    <div class="post">
      <h3>@<%= post.username %></h3>
      <p><%= post.content %></p>
      <button><a href="/posts/<%= post.id %>" class="btn btn-primary">View</a></button>
      <a href="/posts/<%= post.id %>/edit" class="btn btn-secondary">Edit Post</a>
      <form action="/posts/<%= post.id %>?_method=DELETE" method="POST" style="display:inline;">
        <button class="btn btn-danger">Delete</button>
      </form>
    </div>
  <% }) %>
</div>


</body>
</html>
</html>



